<!DOCTYPE html>
<html>
  <head>
    <title>Museec</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  </head>

  <body>


      <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

      <div class="container">
        

        <div class="navbar-header">
          <%= link_to "MUSEEC", root_path, class: "navbar-brand" %>
        </div>

        <ul class="navbar-nav mr-lg-auto">
            

            <li class="nav-item">
              <%= link_to 'Bands', root_path, class: "nav-link smooth-scroll" %>
            </li>
            <li class="nav-item">
              <a class="nav-link smooth-scroll" href="/about">About Us</a>
            </li>
        </ul>

        <ul class="navbar-nav navbar-right">
          <li class="nav-item active">

              <% if user_signed_in? %>
                  <li><%= link_to "Add Band", new_band_path, class: "nav-link smooth-scroll" %></li>
              <% end %>


              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link smooth-scroll"%>
              <% if user_signed_in? %>
                <li class="nav-item active"><%= link_to "Sign Out", destroy_user_session_path, method: :delete , class: "nav-link smooth-scroll"%></li>
              <% else %>  
                <li class="nav-item active"><%= link_to "Log In", new_user_session_path, class: "nav-link smooth-scroll" %></li>
              <% end %>
          </li>

          
        </ul>



        </div>
      </div>

          

    </nav>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <div class="container"><%= yield %></div>


  </body>
</html>
